---
import nav from '../data/nav.json';
const lang = Astro.currentLocale;
const navItems = nav[lang] || [];
const { pathname } = Astro.url;
---
<ul>
  {navItems.map(item => {
    const isActive = pathname.endsWith(item.url);
    return (
      <li>
        <a href={item.url} aria-current={isActive ? 'page' : false}>
          {item.title}
        </a>
      </li>
    );
  })}
</ul>
